<div class="container__content container__content--main">
    <div class="container__content--orders">
        <div class="content__orders--top" style="display: flex; align-items: center;">
            <div class="content__orders--top-left">
                <h3 class="content__orders--top-text1">All Categories</h3>
                <!-- <span class="content__orders--top-text2"></span> -->
            </div>
            <div class="content__orders--top-right content__orders--top-right-search">
                <div class="form__group">
                    <button class="button-search">
                        <ion-icon name="search-outline"></ion-icon>
                    </button>
                    <input type="text" name="search" class="form__input inputSearch" id="inputSearch"
                        placeholder="Search">
                    <!-- <label for="quantity" class="label__place">Số lượng</label> -->
                </div>
                <button class="addNewItem" style="z-index: 10;">
                    <ion-icon name="add-outline"></ion-icon>
                </button>
            </div>
        </div>
        <div class="content__orders--bottom">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>General Information</th>
                        <th>Name Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(item => { %>
                        <tr>
                            <td>#<%= item.id %></td>
                            <td class="tdInfomation">
                                <div class="boxAvatar">
                                    <img src="<%= item.imageCategory %>" alt="">
                                </div>
                                <div class="nameUser">
                                    <span class="nameUser-title">Quantity Items</span>
                                    <span class="nameUser-name" style="display: flex; justify-content: flex-start;">20 Items</span>
                                </div>
                            </td>
                            <td style="font-size: 18px; font-weight: 700;"><%= item.nameCategory %></td>
                            <td class="td-action">
                                <form action="/getPageUpdate" method="POST" id="formGetPageUpdate">
                                    <input name="idCategory" type="text" style="display: none;" value="<%= item.id %>">
                                    <button type="submit">
                                        <ion-icon data-id="<%= item.id %>" class="create" name="create-outline"></ion-icon>
                                    </button>
                                </form>
                                |
                                <form action="/deleteCategory" method="POST" id="formDeleteCate">
                                    <input name="idCategory" type="text" style="display: none;" value="<%= item.id %>">
                                    <button type="submit">
                                        <ion-icon data-id="<%= item.id %>" id="deleteButton" class="deleteAccount" name="close-outline"></ion-icon>
                                    </button>
                                </form>
                            </td>
                            </tr>
                    <% }) %>
                </tbody>
            </table>
