<!-- content update start -->
<section class="container__content container__content2">
    <div class="container__content--orders">
        <div class="content__orders--top" style="display: flex; align-items: center;">
            <div class="content__orders--top-left">
                <h3 class="content__orders--top-text1">Detail & Updates</h3>
                <span class="content__orders--top-text2">Dashboard / <span style="color: #de2e6c;">Update
                        Category</span></span>
            </div>
        </div>
        <form class="content__orders--bottom content__orders--bottom2" method="POST" action="/updateCategory" id="formUpdateCategory"  enctype="multipart/form-data">
            <div class="content__orders--bottom-left">
                <input type="text" id="idCategoryHidden" name="idCategory" style="display: none;" value="">
                <input type="text" id="urlImageHidden" name="urlImage" style="display: none;" value="">
                <div class="form__group-normal ">
                    <label for="nameCategoryUp" class="form__label">Name Category</label>
                    <input type="text" name="nameCategoryUp" value="" id="inputNameCateUpdate" class="form__input"
                        placeholder="Name Category">
                </div>
                <div class="form__group-normal">
                    <label for="descriptionProduct" class="form__label">Description Category</label>
                    <textarea class="form__input" name="descriptionProduct" id="inputDescCateUpdate" cols="50" rows="12"
                        placeholder="Description"></textarea>
                </div>
            </div>
            <div class="content__orders--bottom-right">
                <div class="container__upLoadImage">
                    <div class="container__upLoadImage--boxImg">
                        <img id="imageShowUpdateCate"
                            src="https://i.pinimg.com/564x/c7/89/24/c78924c5ea7cd7ae22d35b6cb38bfe47.jpg" alt="">
                    </div>
                    <div class="container__upLoadImage--boxButton">
                        <input type="file" class="upLoadAvatar" name="imageCategory" id="inputUpdateImgCate">
                        <button class="button__del--avatar">Delete</button>
                    </div>
                </div>
            </div>

            <div class="content__orders--bottom2-boxAction">
                <span class="exitUpdate">
                    <ion-icon name="arrow-forward-outline"></ion-icon>
                    Exit
                </span>
                <button class="buttonUpdate" id="btn__updateCategory">Update</button>
            </div>
        </form>
    </div>
</section>
<!-- content update end -->

