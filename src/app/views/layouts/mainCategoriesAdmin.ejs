<section class="popup-addItem closePopupAddItem">
    <div class="popup-addItem__content">
        <div class="addItem__content--top">
            <span class="addItem__content--title">
                Add New Category
            </span>
            <button class="closePopup closePopupAddItem">
                <ion-icon name="close-outline"></ion-icon>
            </button>
        </div>
        <div class="addItem__content--main">
            <form action="/postCategories" method="POST" class="form" id="form__addCate" enctype="multipart/form-data">
                <div class="form__group--uploadImage">
                    <div class="form__upload-image">
                        <div class="box__image--user">
                            <img src="https://i.pinimg.com/564x/c7/89/24/c78924c5ea7cd7ae22d35b6cb38bfe47.jpg" alt=""
                                id="avatar" class="image__user--upload">
                        </div>
                        <div class="box__btn">
                            <input type="file" name="imageCategory" class="input_file"
                                accept="image/gif, image/jpeg, image/png, image/jpg">
                            <button class="delete__upload--avatarImage box-shadow1">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
                <div class="form__group">
                    <label for="nameCategory" class="form__label">Name Category</label>
                    <input type="text" name="nameCategory" id="nameCategory" class="form__input"
                        placeholder="Name Category">
                    <span class="form__message"></span>
                </div>
                <div class="form__boxButton">
                    <span class="popup-back closePopupAddItem">Back</span>
                    <button class="button__addItem" type="submit">
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
