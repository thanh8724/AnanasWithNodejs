<section class="container__content container__content2"
    style="min-height: 960px !important; transform: translateX(100%);">
    <span id="idCategory" style="display: none;"></span>
    <div class="container__content--orders">
        <div class="content__orders--top" style="display: flex; align-items: center;">
            <div class="content__orders--top-left">
                <h3 class="content__orders--top-text1">Detail & Updates</h3>
                <span class="content__orders--top-text2">Dashboard / <span style="color: #de2e6c;">Update
                        Account</span></span>
            </div>
        </div>
        <form id="formUpdate" class="content__orders--bottom content__orders--bottom2">
            <div class="content__orders--bottom-left">
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">User Name</label>
                    <input type="text" name="nameProductUp" id="userName" class="form__input" placeholder="User Name">
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">Email</label>
                    <input type="email" name="nameProductUp" id="emailAccount" class="form__input email--input"
                        placeholder="Email Address">
                    <span class="form__message"></span>
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">Phone Number</label>
                    <input type="number" name="nameProductUp" id="phoneAccount" class="form__input phone--input"
                        placeholder="Phone Number">
                    <span class="form__message"></span>
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">Password</label>
                    <input type="text" name="nameProductUp" id="passwordAccount" class="form__input password--input"
                        placeholder="Password">
                    <span class="form__message"></span>
                </div>
                <div class="form__group-normal" style="gap: 20px;">
                    <label for="" class="form__label">Role Account</label>
                    <div class="form__group form__group-role">
                        <div class="form__group-role-box">
                            <input value="admin" id="roleAdmin" type="checkbox" name="checkboxRoleAdmin"
                                placeholder="Role Account">
                            <label for="" class="form__label">Admin</label>
                        </div>
                        <div class="form__group-role-box">
                            <input value="user" id="roleUser" type="checkbox" name="checkboxRoleUser"
                                placeholder="Role Account">
                            <label for="" class="form__label">User</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content__orders--bottom-right">
                <div class="container__upLoadImage">
                    <div class="container__upLoadImage--boxImg">
                        <img id="avatarAccount"
                            src="https://i.pinimg.com/564x/c7/89/24/c78924c5ea7cd7ae22d35b6cb38bfe47.jpg" alt="">
                    </div>
                    <div class="container__upLoadImage--boxButton">
                        <input type="file" class="upLoadAvatar" name="upLoadAvatar" id="">
                        <button class="button__del--avatar">Delete</button>
                    </div>
                </div>
            </div>

            <div class="content__orders--bottom2-boxAction">
                <span class="exitUpdate">
                    <ion-icon name="arrow-forward-outline"></ion-icon>
                    Exit
                </span>
                <button class="buttonUpdate">Update</button>
            </div>
        </form>
    </div>
</section>
