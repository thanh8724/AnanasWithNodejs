<link rel="stylesheet" href="../styles/user-general.css">
<link rel="stylesheet" href="../styles/base.css">
<main class="main__user">
    <div class="main__user--header">
        <div class="boxAvatar__user">
            <img class="avatarImage" src="<%  %>" alt="" class="avatar__user--img">
        </div>
        <div class="main__user--header-title">
            <span class="userName">Nguyễn Thành / Tổng Quan</span>
            <small class="header__titlte">Xem thông tin tài khoản - quản lí tài khoản</small>
        </div>
    </div>
    <div class="main__user--content">
        <div class="main__left">
            <ul>
                <li class="menuActive"><a href="/user-general">Thông tin tài khoản</a></li>
                <li><a href="/user-order">Đơn hàng</a></li>
                <li><a href="/user-address">Địa chỉ</a></li>
                <li class="button__logOut"><a href="/" style="color: red;">Đăng xuất</a></li>
            </ul>
        </div>
        <div class="main__right">
            <form class="form">
                <div class="form__avatar">
                    <div class="avatar__container">
                        <img class="avatarImage" src="" alt="">
                        <div id="loadingContainer">
                            <div class="loader"></div>
                        </div>
                    </div>
                    <div class="avatar__action">
                        <input type="file" id="input__uploadFile" class="upLoad__avatar"
                            accept="image/gif, image/jpeg, image/png, image/jpg">
                        <button class="delete__avatar">Xóa</button>
                    </div>
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">User Name</label>
                    <input type="text" name="nameProductUp" id="" class="form__input" placeholder="User Name">
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">Email</label>
                    <input type="email" name="nameProductUp" id="" class="form__input" placeholder="Email Address">
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">Password</label>
                    <input type="text" name="nameProductUp" id="" class="form__input" placeholder="Password">
                </div>
                <div class="form__group-normal ">
                    <label for="nameProductUp" class="form__label">Phone Number</label>
                    <input type="number" name="nameProductUp" id="" class="form__input" placeholder="Phone Number">
                </div>
                <div class="form__action">
                    <button class="submit__upload">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</main>